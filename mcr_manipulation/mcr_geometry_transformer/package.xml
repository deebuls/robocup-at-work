<?xml version="1.0"?>
<package>
  <name>mcr_geometry_transformer</name>
  <version>0.0.1</version>
  <description>
    A C++ and Python library that enables the transformation of geometric
    relations between different coordinate frames. The library is an extension
    to the TF library which does not provide functions to transform all
    geometric relations, mainly twists and wrenches.
  </description>
  <license>GPLv3</license>

  <author email="sven.schneider@h-brs.de">Sven Schneider</author>
  <maintainer email="sven.schneider@h-brs.de">Sven Schneider</maintainer>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>roscpp</build_depend>
  <build_depend>tf</build_depend>
  <build_depend>tf_conversions</build_depend>
  <build_depend>orocos_kdl</build_depend>
  <build_depend>geometry_msgs</build_depend>
  <build_depend>rosunit</build_depend>

  <run_depend>message_runtime</run_depend>
  <run_depend>roscpp</run_depend>
  <run_depend>rospy</run_depend>
  <run_depend>tf</run_depend>
  <run_depend>tf_conversions</run_depend>
  <run_depend>orocos_kdl</run_depend>
  <run_depend>geometry_msgs</run_depend>
  <run_depend>rosunit</run_depend>

  <test_depend>roslaunch</test_depend>
</package>
