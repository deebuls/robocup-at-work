<?xml version="1.0"?>
<launch>
    <node pkg="mcr_pose_generator" type="pose_generator_node"
            name="pose_generator" output="screen">
        <rosparam command="load"
                  file="$(find mcr_pose_generator)/ros/config/gripper_configuration_matrix.yaml" />

        <!-- the configuration matrix of the gripper to be used -->
        <param name="gripper_config_matrix" type="str" value="sdh_side_grasp"/>

    </node>

    <test pkg="mcr_pose_generator" type="pose_generator_test.py"
            test-name="test_pose_generator">

        <remap from="~component_output" to="/pose_generator/poses_list"/>
        <remap from="~event_out" to="/pose_generator/event_in"/>
        <remap from="~sampling_parameters" to="/pose_generator/sampling_parameters"/>
        <remap from="~target_pose" to="/pose_generator/target_pose"/>
    </test>
</launch>
